<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:text="Aqui se puede escribir la información de tu mascota para que el veterinario la vea"
            android:textColor="#04B486"
            app:fontFamily="casual" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="178dp"
            android:layout_height="179dp"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/camara" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:text="Nombre de tu mascota"
            android:textColor="#6E6E6E" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:text="Fecha de Nacimiento"
            android:textColor="#6E6E6E" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:text="Raza"
            android:textColor="#6E6E6E" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:text="Sexo"
            android:textColor="#6E6E6E" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_fondo_color1"
            android:elevation="5dp"
            android:text="Añadir nuevo"
            android:textColor="#fff"
            android:textSize="16dp"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_color_color2"
            android:elevation="5dp"
            android:text="Cancelar"
            android:textColor="#fff"
            android:textSize="16dp" />

    </LinearLayout>
</RelativeLayout>
